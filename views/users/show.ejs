<%- include('../components/header') -%>

<div class="container-fluid mt-3">
    <a href="/dashboard"><i class="fas fa-arrow-circle-left"> BACK</i></a>
    <div class="row justify-content-center">
        <div class="col-sm-6 border border-muted">
            <h3 class="text-center text-primary py-3">User Information:</h3>
            <% if(data) { %> 
                <% data.forEach((user) => { %>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Name: </strong> <small><%= user.first_name %> <%= user.last_name %></small></li>
                        <li class="list-group-item"><strong>Email: </strong>  <small><%= user.email %></small></li>
                        <li class="list-group-item"><strong>Birth Date: </strong>  <small><%= user.birth_date %></small></li>
                        <li class="list-group-item"><strong>Address:  </strong> <small><%= user.address %></small></li>
                        <li class="list-group-item"><strong>Created Date: </strong> <small><%= user.created_at %></small></li>
                    </ul>
                <% }) %>
            <% } %>
        </div>
    </div>
</div>

<%- include('../components/footer') -%>